				>
				["at0003"] = <
					text = <"Papillary urothelial neoplasm of low malignant potential">
					description = <"A noninvasive papillary urothelial lesion with minimal atypia and low risk of progression.">
				>
				["at0004"] = <
					text = <"Papillary carcinoma, low-grade">
